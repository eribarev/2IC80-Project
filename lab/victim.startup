#!/bin/bash

# Assign IP to victim
ip addr add 10.0.0.20/24 dev eth0
ip link set eth0 up

# Set default route through gateway
ip route add default via 10.0.0.1

# Use gateway as DNS server
echo "nameserver 10.0.0.1" > /etc/resolv.conf

# Update and install Python + pip inside the container
apt-get update
apt-get install -y python3 python3-pip dnsutils curl net-tools